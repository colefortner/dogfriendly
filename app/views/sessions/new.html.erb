
<h1>User Login</h1>

<% if flash[:messages] %>
   <h2 class="register-flash"><%= flash[:messages] %></h2>
<% end %>

<%= form_tag '/login' do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Login" %>
<% end %>

